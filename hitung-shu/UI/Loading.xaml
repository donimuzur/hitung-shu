<Window x:Class="hitung_shu.UI.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hitung_shu.UI"
        mc:Ignorable="d"
        x:Name="Loading_View"
        Title="Loading" Height="150" Width="600" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Loading ... " FontSize="24" Margin="10,10,10,10"></TextBlock>
            <DockPanel>
                <ProgressBar Height="100" IsIndeterminate="True" />
            </DockPanel>
        </StackPanel>


    </Grid>
</Window>