<UserControl x:Class="hitung_shu.UI.UI_BagiSHU.View_BagiShu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:hitung_shu.UI.UI_BagiSHU"
             xmlns:wpftoolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="780">
    <Grid Background="White">
        <ScrollViewer>
            <StackPanel Orientation="Vertical" >
                <GroupBox Header="Bagi SHU" Foreground="Black" Style="{x:Null}" Margin="30,30,30,0" FontSize="16" FontWeight="Bold" Background="{x:Null}">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Tahun" Margin="10,10,0,10" Width="150" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black"></TextBlock>
                            <wpftoolkit:ButtonSpinner Width="150" Spin="ButtonSpinner_Spin">
                                <TextBox x:Name="Tahun" HorizontalContentAlignment="Right" BorderBrush="{x:Null}" TextAlignment="Right" KeyDown="Tahun_KeyDown"/>
                            </wpftoolkit:ButtonSpinner>
                            <Button Margin ="10,0,0,0" Content="Cek" Width="50" x:Name="Cek" Click="Cek_Click"></Button>
                            <Button Margin ="10,0,0,0" Content="Hitung Shu" Width="100" x:Name="HitungShu" Click="HitungShu_Click" IsEnabled="False"></Button>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Foreground="Black" Margin="10,10,0,10" Text="Total SHU" FontSize="14" FontWeight="Bold" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                            <TextBox Foreground="Black" Width="150" x:Name="total_shu" TextAlignment="Right" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" IsEnabled="False"></TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Foreground="Black" Margin="10,10,0,10" Text="Dana Cadangan (30%)" FontSize="14" FontWeight="Bold" Width="180" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                            <TextBox Foreground="Black" Width="150" x:Name="DanaCadangan" TextAlignment="Right" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" IsEnabled="False"></TextBox>
                            <TextBlock Foreground="Black" Margin="10,10,0,10" Text="Jasa Modal (20%)" FontSize="14" FontWeight="Bold" Width="180" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                            <TextBox Foreground="Black" Width="150" x:Name="JasaModal" TextAlignment="Right" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" IsEnabled="False"></TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Foreground="Black" Margin="10,10,0,10" Text="Jasa Anggota (30%)" FontSize="14" FontWeight="Bold" Width="180" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                            <TextBox Foreground="Black" Width="150" x:Name="JasaAnggota" TextAlignment="Right" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" IsEnabled="False"></TextBox>
                            <TextBlock Foreground="Black" Margin="10,10,0,10" Text="Dana Pengawas (20%)" FontSize="14" FontWeight="Bold" Width="180" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                            <TextBox Foreground="Black" Width="150" x:Name="PengurusPengawas" TextAlignment="Right" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" IsEnabled="False"></TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Foreground="Black" Margin="10,10,0,10" Text="Kesejahteraan PGW (10%)" FontSize="14" FontWeight="Bold" Width="180" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                            <TextBox Foreground="Black" Width="150" x:Name="KesejahteraanPegawai" TextAlignment="Right" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" IsEnabled="False"></TextBox>
                            <TextBlock Foreground="Black" Margin="10,10,0,10" Text="Pendidikan (10%)" FontSize="14" FontWeight="Bold" Width="180" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                            <TextBox Foreground="Black" Width="150" x:Name="Pendidikan" TextAlignment="Right" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" IsEnabled="False"></TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Foreground="Black" Margin="10,10,0,10" Text="Dana Sosial (10%)" FontSize="14" FontWeight="Bold" Width="180" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                            <TextBox Foreground="Black" Width="150" x:Name="DanaSosial" TextAlignment="Right" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" IsEnabled="False"></TextBox>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="Simpanan (Pokok + wajib +sukarela) dalam 1 Tahun" Foreground="Black" Style="{x:Null}" Margin="30,30,30,0" FontSize="16" FontWeight="Bold" Background="{x:Null}">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Pokok" Margin="10,10,0,10" Width="150" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black"></TextBlock>
                            <TextBox Width="150" Foreground="Black" x:Name="total_pokok" TextAlignment="Right"  VerticalContentAlignment="Center" HorizontalContentAlignment="Right" IsEnabled="False"></TextBox>
                            <TextBlock Foreground="Black" Margin="10,10,0,10" Text="Wajib" FontSize="14" FontWeight="Bold" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                            <TextBox Foreground="Black" Width="150" x:Name="total_wajib" TextAlignment="Right"  VerticalContentAlignment="Center" HorizontalContentAlignment="Right" IsEnabled="False"></TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Foreground="Black" Margin="10,10,0,10" Text="sukarela" FontSize="14" FontWeight="Bold" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                            <TextBox Foreground="Black" Width="150" x:Name="total_sukarela" TextAlignment="Right" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" IsEnabled="False"></TextBox>
                            <TextBlock Foreground="Black" Margin="10,10,0,10" Text="Total Simpanan" FontSize="14" FontWeight="Bold" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                            <TextBox Foreground="Black" Width="150" x:Name="total_simpanan" TextAlignment="Right" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" IsEnabled="False"></TextBox>
                        </StackPanel >
                    </StackPanel>
                </GroupBox>
                <GroupBox Foreground="Black" Style="{x:Null}" Margin="30,30,30,0" FontSize="16" FontWeight="Bold" Background="{x:Null}">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Total Belanja" Margin="10,10,0,10" Width="150" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black"></TextBlock>
                            <TextBox Width="150" Foreground="Black" x:Name="total_belanja" TextAlignment="Right" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" IsEnabled="False"></TextBox>
                            <TextBlock Foreground="Black" Margin="10,10,0,10" Text="Total Pinjaman" FontSize="14" FontWeight="Bold" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                            <TextBox Foreground="Black" Width="150" x:Name="total_pinjaman" TextAlignment="Right" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" IsEnabled="False"></TextBox>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <GroupBox Foreground="Black" Style="{x:Null}" Margin="30,30,30,0" FontSize="16" FontWeight="Bold" Background="{x:Null}">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <DataGrid x:Name="Dgv_Home" Height="400" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsReadOnly="True" CanUserReorderColumns="False" CanUserResizeColumns="False" MinColumnWidth="150" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" >

                            </DataGrid>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="30,30,30,30">
                    <Button Content="Simpan" Height="50" Width="100" x:Name="BtnSimpan" Click="BtnSimpan_Click"></Button>
                    <Button Margin="30,0,0,0" Content="Tutup" Height="50" Width="100"></Button>
                    <TextBlock Visibility="Hidden" x:Name="Id"></TextBlock>
                    <TextBlock Visibility="Hidden" x:Name="CreatedDate"></TextBlock>
                    <TextBlock Visibility="Hidden" x:Name="CreatedBy"></TextBlock>
                    <TextBlock Visibility="Hidden" x:Name="ModifiedDate"></TextBlock>
                    <TextBlock Visibility="Hidden" x:Name="ModifiedBy"></TextBlock>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
       
    </Grid>
</UserControl>
